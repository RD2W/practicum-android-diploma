<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/value_64">

    <TextView
        android:id="@+id/industry_text"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:letterSpacing="0"
        android:maxLines="2"
        android:paddingEnd="@dimen/value_8"
        android:textAllCaps="false"
        android:textColor="@color/industry_item_text_color"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/industry_radio_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Радиокнопка "Отрасль" -->
    <ImageView
        android:id="@+id/industry_radio_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_radio_button_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/industry_text"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
