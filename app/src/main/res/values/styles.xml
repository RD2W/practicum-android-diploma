<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextBold32">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="TextMedium22">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TextMedium16" parent="TextMedium22">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextRegular16" parent="TextMedium16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextRegular12" parent="TextRegular16">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="navigationIconTint">@color/text</item>
        <item name="titleTextAppearance">@style/TextMedium22</item>
    </style>

    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/background</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_selector</item>
        <item name="itemIconTint">@drawable/bottom_nav_color_selector</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
    </style>

    <!-- Стили для экрана "Команда" и элемента списка разработчиков (item_developer.xml) [START] -->
    <style name="DeveloperAvatarStyle">
        <item name="shapeAppearance">@style/DeveloperAvatarStyle.CornerSize</item>
    </style>

    <style name="DeveloperAvatarStyle.CornerSize">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/value_8</item>
    </style>

    <style name="DeveloperTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextBold32</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DeveloperNameTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextMedium16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DeveloperInfoTextStyle" parent="DeveloperNameTextStyle">
        <item name="android:textAppearance">@style/TextRegular12</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- Стили для экрана "Команда" и элемента списка разработчиков (item_developer.xml) [END] -->

    <!-- Добавила стили для основных элементов -->

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white_universal</item>
        <item name="navigationIconTint">@color/black_universal</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextStyle</item>
        <item name="android:layout_height">@dimen/value_64</item>
        <item name="android:layout_width">match_parent</item>
        <item name="buttonGravity">center_vertical</item>
    </style>


    <style name="ToolbarTitleTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/black_universal</item>
    </style>


    <style name="inputSearch" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/value_56</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/value_16</item>
        <item name="android:drawableTint">@color/black_universal</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textAppearance">@style/inputSearchTextStyle</item>
    </style>

    <style name="inputSearchTextStyle">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>


    <style name="ErrorsTitlesForSections">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_universal</item>
        <item name="android:backgroundTint">@color/white_universal</item>
        <item name="android:maxLines">3</item>
        <item name="android:textAppearance">@style/ErrorsTitlesForSectionsTextStyle</item>
    </style>

    <style name="ErrorsTitlesForSectionsTextStyle">
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">font/ys_display_medium</item>
    </style>

    <style name="BigTitles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_universal</item>
        <item name="android:backgroundTint">@color/white_universal</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/BigTitlesTextStyle</item>
    </style>

    <style name="BigTitlesTextStyle">
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="StyleForCommonTextBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_universal</item>
        <item name="android:backgroundTint">@color/white_universal</item>
        <item name="android:textAppearance">@style/StyleForCommonTextBoldTextStyle</item>
    </style>

    <style name="StyleForCommonTextBoldTextStyle">
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="StyleForCommonTextThin" parent="StyleForCommonTextBold">
        <item name="android:textAppearance">@style/StyleForCommonTextThinTextStyle</item>
    </style>

    <style name="StyleForCommonTextThinTextStyle">
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!--    Конец изменений -->

    <!-- item_vacancy.xml - Стили для элемента списка вакансий [START] -->
    <!-- Стиль для логотипа компании с закругленными углами -->
    <style name="CompanyLogoStyle">
        <item name="shapeAppearance">@style/CompanyLogoStyle.CornerSize</item>
    </style>

    <!-- Параметры скругления углов (12dp) -->
    <style name="CompanyLogoStyle.CornerSize">
        <item name="cornerFamily">rounded</item>  <!-- Скругленный стиль -->
        <item name="cornerSize">@dimen/value_12</item>  <!-- Радиус скругления -->
    </style>

    <!-- Стиль для названия вакансии (основной заголовок) -->
    <style name="VacancyNameTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextMedium22</item>  <!-- Средний шрифт 22sp -->
        <item name="android:maxLines">3</item>  <!-- Макс 3 строки -->
        <item name="android:ellipsize">end</item>  <!-- Многоточие в конце при обрезке -->
    </style>

    <!-- Стиль для дополнительной информации (наследуется от VacancyNameTextStyle) -->
    <style name="VacancyInfoTextStyle" parent="VacancyNameTextStyle">
        <item name="android:textAppearance">@style/TextRegular16</item>  <!-- Обычный шрифт 16sp -->
        <item name="android:maxLines">1</item>  <!-- Только 1 строка -->
    </style>
    <!-- Стиль для элемента списка вакансий -->
    <!-- item_vacancy.xml - Стили для элемента списка вакансий [END] -->

</resources>
