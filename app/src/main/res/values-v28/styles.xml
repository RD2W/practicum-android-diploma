<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/background</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textFontWeight">400</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_selector</item>
        <item name="itemIconTint">@drawable/bottom_nav_color_selector</item>
    </style>

    <style name="TextBold32">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:lineHeight">@dimen/value_40</item>
    </style>

    <style name="TextMedium22">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:lineHeight">@dimen/value_24</item>
    </style>

    <style name="TextMedium16" parent="TextMedium22">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:lineHeight">@dimen/value_20</item>
    </style>

    <style name="TextRegular16" parent="TextMedium16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextRegular12" parent="TextRegular16">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:lineHeight">@dimen/value_16</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="inputSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/value_56</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/value_16</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableTint">@color/black_universal</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="ErrorsTitlesForSections">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">"@color/black_universal"</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">"@font/ys_display_medium"</item>
        <item name="android:background">"@color/white_universal"</item>
        <item name="android:backgroundTint">@color/white_universal</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="BigTitles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">"@color/black_universal"</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:fontFamily">"@font/ys_display_bold"</item>
        <item name="android:background">"@color/white_universal"</item>
        <item name="android:backgroundTint">@color/white_universal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="StyleForCommonTextThin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">"@color/black_universal"</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">"@font/ys_display_regular"</item>
        <item name="android:background">"@color/white_universal"</item>
        <item name="android:backgroundTint">@color/white_universal</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="StyleForCommonTextBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">"@color/black_universal"</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">"@font/ys_display_regular"</item>
        <item name="android:background">"@color/white_universal"</item>
        <item name="android:backgroundTint">@color/white_universal</item>
        <item name="android:textFontWeight">500</item>
    </style>

</resources>
